<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="add-tab">

    <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group mt-4">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" value="<%= item.title %>" placeholder="Enter title" name="title" required>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" value="<%= item.price %>" placeholder="Enter price" name="price" required>
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" value="<%= item.city %>" placeholder="Enter city" name="city" required>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control" id="category" name="categoryId">
                <option value="<%= item.categoryId.id %>"><%= item.categoryId.name %></option>
                <% for( let i=0; i < category.length; i++ ) { %>
                    <option value="<%= category[i].id %>">
                        <%= category[i].name %>
                    </option>
                    <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="customFile">Image</label>
            <input type="file" class="form-control" id="customFile" name="image" multiple>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" placeholder="Enter description" name="about"
                required><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>