<!-- Modal -->
<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Content</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/admin/content" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" id="name" name="name"
                            placeholder="Enter new content name" required>
                    </div>
                    <div class="form-group">
                        <label for="university">Universitas</label>
                        <select class="form-control" id="university" name="universityId" required>
                            <option value="">Pilih Universitas</option>
                            <% for( let i = 0; i < university.length; i++ ) { %>
                                <% if (String(university[i]._id) === String(user.roleId)) { %>
                                    <option value="<%= university[i]._id %>" selected><%= university[i].name %></option>
                                <% } %>
                                <% if (user.roleId == null) { %>
                                    <option value="<%= university[i]._id %>"><%= university[i].name %></option>
                                <% } %>
                            <% } %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="jeroanKonten">Konten</label>
                        <textarea class="form-control" id="jeroanKonten" placeholder="Enter content" name="jeroanKonten"
                            required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>