<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="add-tab">
    <form action="/admin/content/<%= content._id %>?_method=PUT" method="POST">
        <div class="modal-body">
            <div class="form-group">
                <label for="name">Title</label>
                <input type="text" class="form-control" id="name" name="name"
                    placeholder="Enter new content name" value="<%= content.name %>" required>
            </div>
            <div class="form-group">
                <label for="university">Universitas</label>
                <select class="form-control" id="university" name="universityId" required>
                    <% for( let i = 0; i < university.length; i++ ) { %>
                        <% if (String(university[i]._id) === String(content.universityId._id)) { %>
                            <option value="<%= university[i]._id %>" selected><%= university[i].name %></option>
                        <% } %>
                        <% if (user.roleId == null) { %>
                            <option value="<%= university[i]._id %>"><%= university[i].name %></option>
                        <% } %>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="jeroanKonten">Konten</label>
                <textarea class="form-control" id="jeroanKonten" placeholder="Enter content" name="jeroanKonten"
                    required> <%= content.jeroanKonten %> </textarea>
            </div>
        </div>
        <div class="modal-footer">
            <a href="/admin/content" class="btn btn-secondary">Cancel</a>
            <input type="hidden" name="oldUniversityId" value="<%= content.universityId._id %>">
            <input type="submit" class="btn btn-primary">
        </div>
    </form>
</div>