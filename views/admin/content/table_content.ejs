<div class="card shadow mb-4">
    <div class="card-header py-3">
        <!-- Button trigger modal -->
        <a href="/admin/content/add">
            <button type="button" class="btn btn-primary">
                <i class="fas fa-plus"></i>
            </button>
        </a>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>University</th>
                        <th>Title</th>
                        <!-- <th>Content</th> -->
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < content.length; i++ ){ %>
                        <% if (user.universityId == content[i].universityId._id || user.universityId == null) { %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>
                                <td>
                                    <%= content[i].universityId.name %>
                                </td>
                                <td>
                                    <%= content[i].name %>
                                </td>
                                <!-- <td>
                                    <%- /* content[i].jeroanKonten */ %>
                                </td> -->
                                <td>
                                    <a href="/admin/content/<%= content[i].universityId._id %>/<%= content[i]._id %>" type="button"
                                        class="btn btn-warning btn-circle btn-sm button-update"
                                        >
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/admin/content/<%= content[i].universityId._id %>/<%= content[i].id %>?_method=DELETE" method="POST"
                                        style="display: inline;">
                                        <button type="submit" href="" class="btn btn-danger btn-circle btn-sm"><i
                                                class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                         
                        <% } %>
                    <% } %>
                </tbody>

            </table>
        </div>
    </div>
</div>