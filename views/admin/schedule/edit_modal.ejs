<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Schedule</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/admin/schedule?_method=PUT" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control name" name="name"
                            placeholder="Enter update schedule name" required>
                    </div>
                    <% if (!user.universityId) { %>
                        <div class="form-group">
                            <label for="time-start-date">Waktu Mulai</label>
                            <input type="datetime-local" class="form-control time-start-date" id="time-start-date" name="timeStartDate" required>
                        </div>
                        <div class="form-group">
                            <label for="time-start-date">Waktu Selesai</label>
                            <input type="datetime-local" class="form-control time-end-date" id="time-start-date" name="timeEndDate" required>
                        </div>
                    <% } %>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="scheduleId">
                    <input type="hidden" class="universityId" name="universityId">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary id">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>